<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="@dimen/grid_margin_side"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:orientation="horizontal">

    <ImageButton
        android:contentDescription="@string/app_name"
        android:id="@+id/question_parent_dropdown"
        android:padding="@dimen/grid_margin_side"
        android:src="@drawable/ic_action_expand"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:background="@null"/>
    <TextView
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:layout_toEndOf="@id/question_parent_dropdown"
        android:layout_marginStart="@dimen/grid_margin_side"
        android:id="@+id/question_parent_text"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_width="match_parent"
        android:text="@string/app_name"
        android:textColor="#111"/>

</RelativeLayout>